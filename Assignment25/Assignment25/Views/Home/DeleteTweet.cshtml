@model Assignment25.TblTweet
@{
    ViewBag.Title = "Delete";
}

<h2>  Welcome Home @Html.DisplayFor(model => model.TweetUserName) </h2>

<h3>Are you sure you want to delete this?</h3>

<div class="form-horizontal">
    <h4>Delete</h4>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TweetId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TweetId)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.TweetUserId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TweetUserId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TweetUserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TweetUserName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TweetText)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TweetText)
            </dd>

        </dl>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />  
            </div>
        </div>
    }
</div>
<div class="form-actions no-color">
    @Html.ActionLink("Back to My Twitter List", "MyTweets", new { id = Model.TweetUserId, user = Model.TweetUserName })
</div>
